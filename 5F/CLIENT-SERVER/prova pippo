#define DIM 512
#define SERVERPORT 63400

int main(){

struct sockaddr_in servizio;
int socketfd;

servizio.sin_family = AF_INET;
servizio.sin_addr.s_addr = htonl(INADDR_ANY);
servizio.sin_port = htons(SERVERPORT);

socketfd = socket(AF_INET, SOCK_STREAM, 0);
if(socketfd == -1){
    printf("errore");
    return -1;
}
if(connect(socketfd, (struct sockaddr*)&servizio, sizeof(servizio))== -1){
    printf("errore");
    return -1;
}

int pippo = 10
int pierino = 0;
write(socketfd, pippo, sizeof(pippo));
read(socketfd, pierino, sizeof(pierino));
close(socketfd);

return 0;
}

#define DIM 512
#define SERVERPORT 63400

int main(){
struct sockaddr_in servizio, sockaddr_remoto;
int socketfd, sao, fromlen = soa;

servzio.sin_family = AF_INET;
servizio.sin_addr.s_addr = htonl(INADDR_ANY);
servizio.sin_port = htons(SERVERPORT);

socketfd = socket(AF_INET, SOCK_STREAM, 0);

bind(socketfd, (struct sockaddr*)&servizio, sizeof(servizio));

listen(socketfd, 10);

while(1){

soa = accept(socketfd, (struct sockaddr*)&addr_remoto, fromlen);
int pippo = 0;
read(soa, pippo, sizeof(pippo));

write(soa, pippo, sizeof(pippo))

close(soa);
}

return 0;
}
